<Page x:Class="NevaTelecomWorkWithCustomers.CRM"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NevaTelecomWorkWithCustomers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CRM"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="109*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label>ФИО</Label>
            <TextBox MinWidth="200"></TextBox>
            <Label>Телефон</Label>
            <TextBox MinWidth="200"></TextBox>
            <Button>Поиск абонента</Button>
        </StackPanel>
        <Border Grid.Row="1" BorderThickness="4" BorderBrush="Black"></Border>
        <ScrollViewer Margin="10" Grid.Row="1">

        <StackPanel DataContext="{Binding Current}">
                
            <Label>Номер заявки</Label>
            <TextBox></TextBox>
            
            <Label>Дата создания</Label>
            <TextBox></TextBox>
            
            <Label>Номер телефона абонента</Label>
            <TextBox></TextBox>
            
            <Label>ЛС_абонента</Label>
                <TextBox Text="{Binding ЛС_абонента}" ></TextBox>
            
            <Label>Услуга</Label>
            <TextBox></TextBox>
            
            <Label>Вид_услуги</Label>
            <TextBox></TextBox>
            
            <Label>Тип_услуги</Label>
            <TextBox></TextBox>
            
            <Label>Статус</Label>
            <TextBox></TextBox>
            
            <Label>Тип_оборудования</Label>
            <TextBox></TextBox>
            
            <Label>Описание_проблемы</Label>
            <TextBox></TextBox>

            <Label>Дата_закрытия</Label>
            <TextBox></TextBox>
            
            <Label>Тип_проблемы</Label>
            <TextBox></TextBox>
            

        </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Padding="10">Сохранить и закрыть заявку</Button>
        </StackPanel>
    </Grid>
</Page>
